/* Dashboard Administrativo - PowerChina */
/* Identidade visual consistente com o app mobile */

:root {
    --primary-color: #1e88e5;
    --secondary-color: #6c757d;
    --success-color: #198754;
    --danger-color: #dc3545;
    --warning-color: #ffc107;
    --info-color: #0dcaf0;
    --dark-bg: #0f2027;
    --dark-mid: #203a43;
    --dark-accent: #8b0000;
}

body {
    font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    background: linear-gradient(135deg, #0f2027, #203a43, #8b0000);
    min-height: 100vh;
    color: #333;
}

/* Garantir texto visível em TODOS os cards brancos */
.card,
.card *:not(.badge):not(.btn):not(.alert *):not(.table thead *) {
    color: #333 !important;
}

/* Página de Login */
.login-page {
    background: linear-gradient(135deg, #0f2027, #203a43, #8b0000);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.login-page .card {
    border: none;
    border-radius: 15px;
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

/* Sidebar */
.sidebar {
    position: fixed;
    top: 56px;
    bottom: 0;
    left: 0;
    z-index: 100;
    padding: 48px 0 0;
    background: rgba(15, 32, 39, 0.98);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
}

@supports not (backdrop-filter: blur(10px)) {
    .sidebar {
        background: rgba(15, 32, 39, 1);
    }
}

.sidebar .nav-link {
    font-weight: 500;
    color: rgba(255, 255, 255, 0.85) !important;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    margin: 0.25rem 0.5rem;
    transition: all 0.3s ease;
}

.sidebar .nav-link:hover {
    background-color: rgba(30, 136, 229, 0.2);
    color: #fff !important;
}

.sidebar .nav-link.active {
    color: #fff !important;
    background: linear-gradient(135deg, var(--primary-color), #1565c0);
    box-shadow: 0 4px 12px rgba(30, 136, 229, 0.4);
}

.sidebar .nav-link i,
.sidebar .nav-link svg {
    color: inherit;
}

/* Cards de Estatísticas */
.stat-card {
    border: none;
    border-radius: 12px;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.98);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

@supports not (backdrop-filter: blur(10px)) {
    .stat-card {
        background: rgba(255, 255, 255, 1);
    }
}

/* Cards COLORIDOS (primário, sucesso, info, aviso) */
.stat-card.bg-primary,
.stat-card.bg-success,
.stat-card.bg-info,
.stat-card.bg-warning,
.stat-card.bg-danger,
.bg-primary,
.bg-success,
.bg-info,
.bg-warning,
.bg-danger {
    color: #fff !important;
}

.stat-card.bg-primary *,
.stat-card.bg-success *,
.stat-card.bg-info *,
.stat-card.bg-warning *,
.stat-card.bg-danger *,
.bg-primary *,
.bg-success *,
.bg-info *,
.bg-warning *,
.bg-danger * {
    color: #fff !important;
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(30, 136, 229, 0.4);
}

.stat-card .card-body {
    padding: 1.5rem;
}

.stat-card h6 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.9;
}

.stat-card h2 {
    font-size: 2.5rem;
    font-weight: bold;
}

/* Forçar texto escuro em cards BRANCOS */
.stat-card:not(.bg-primary):not(.bg-success):not(.bg-info):not(.bg-warning):not(.bg-danger) h6,
.stat-card:not(.bg-primary):not(.bg-success):not(.bg-info):not(.bg-warning):not(.bg-danger) h2,
.stat-card:not(.bg-primary):not(.bg-success):not(.bg-info):not(.bg-warning):not(.bg-danger) small {
    color: #333 !important;
